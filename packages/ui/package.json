{
	"name": "@proximity/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./react": {
			"import": "./dist/react/index.mjs",
			"require": "./dist/react/index.cjs",
			"types": "./dist/react/index.d.ts"
		},
		"./shadcn/*": {
			"import": "./dist/shadcn/*.mjs",
			"require": "./dist/shadcn/*.cjs",
			"types": "./dist/shadcn/*.d.ts"
		},
		"./utils/cn": {
			"import": "./dist/utils/cn.mjs",
			"require": "./dist/utils/cn.cjs",
			"types": "./dist/utils/cn.d.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"lint": "eslint src/",
		"dev": "tsc watch.ts --outDir ./dist && node ./dist/watch.js",
		"type-check": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@proximity/eslint-config": "workspace:*",
		"@proximity/typescript-config": "workspace:*",
		"@types/react": "^19.0.1",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.16",
		"typescript": "5.7.2"
	},
	"dependencies": {
		"@proximity/tailwind-config": "workspace:*",
		"@radix-ui/react-separator": "^1.1.1",
		"@radix-ui/react-slot": "^1.1.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.468.0",
		"tailwind-merge": "^2.5.5",
		"tailwindcss-animate": "^1.0.7",
		"tsup": "^8.3.5",
		"zod": "^3.24.1"
	}
}
